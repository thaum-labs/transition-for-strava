# App base URL (used only if you want to build absolute URLs)
# For local development: http://localhost:3000
# For production: https://transitionforstrava.com
APP_BASE_URL=http://localhost:3000

# 32+ chars secret used to encrypt session cookies.
# Use something like:
# - mac/linux:  openssl rand -base64 32
# - node:       node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
SESSION_SECRET=replace_me_with_a_long_random_secret

# Strava OAuth app credentials
STRAVA_CLIENT_ID=replace_me
STRAVA_CLIENT_SECRET=replace_me

# Must exactly match what you configured in Strava app settings
# For local development: http://localhost:3000/api/auth/strava/callback
# For production: https://transitionforstrava.com/api/auth/strava/callback
STRAVA_REDIRECT_URI=http://localhost:3000/api/auth/strava/callback

# Comma-separated scopes. For V1 we use read access to activities/streams.
STRAVA_SCOPES=activity:read_all

